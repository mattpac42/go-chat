{
  "name": "{{PROJECT_NAME}} - Python Flask",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bookworm",

  "runArgs": [
    "--security-opt", "label=disable"
  ],

  "containerEnv": {
    "PYTHONPATH": "/workspace",
    "FLASK_ENV": "development",
    "FLASK_DEBUG": "1",
    "PULSE_SERVER": "host.containers.internal"
  },

  "postCreateCommand": ".devcontainer/setup.sh",

  "postStartCommand": "echo '{{PROJECT_NAME}} Dev Environment Ready!' && echo 'Start: flask run --host=0.0.0.0'",

  "postAttachCommand": "claude --dangerously-skip-permissions",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-python.black-formatter",
        "ms-python.debugpy",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true,
          "**/.pytest_cache": true
        }
      }
    }
  },

  "forwardPorts": [5000],

  "portsAttributes": {
    "5000": {
      "label": "Flask App",
      "onAutoForward": "notify"
    }
  },

  "remoteUser": "vscode",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
}
